<div class="mt-4 container">
  <div class="row">
    {{#each courses}}
      <div class="col-sm-8 col-lg-4">
        <div class="card mb-4" style="width: 18rem; max-height: 500px">
          <a href="/courses/{{this.slug}}">
            <img src={{this.image}} class="card-img-top" alt={{this.name}} />
          </a>
          <div class="card-body">
            <a href="/courses/{{this.slug}}">
              <h5 class="card-title">{{this.name}}</h5>
            </a>
            <p class="card-text" id="cardDescription">{{this.description}}</p>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>

